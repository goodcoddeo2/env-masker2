{
    "name": "env-masker",
    "displayName": "Env Masker",
    "description": "Masks sensitive values in .env, .json files to prevent accidental exposure.",
    "version": "0.0.3",
    "publisher": "hqnseung",
    "repository": {
        "type": "git",
        "url": "https://github.com/hqnseung/env-masker"
    },
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished",
        "onCommand:envMasker.toggle",
        "onCommand:envMasker.hideAll"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "envMasker.toggle",
                "title": "Env Masker: Toggle Masking"
            },
            {
                "command": "envMasker.hideAll",
                "title": "Env Masker: Hide All"
            }
        ],
        "configuration": {
            "title": "Env Masker",
            "properties": {
                "envMasker.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable masking of .env values."
                },
                "envMasker.maskColor": {
                    "type": "string",
                    "default": "badge.background",
                    "description": "The color used for masking .env values. Can be a ThemeColor ID (e.g., 'badge.background') or a hex color (e.g., '#ff0000')."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "tsc -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.96.0",
        "@types/node": "20.x",
        "typescript": "^5.7.2"
    }
}
